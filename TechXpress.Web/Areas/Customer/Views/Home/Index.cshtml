<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title text-center mb-5">
                    <h3 class="title">New Products</h3>

                </div>
            </div>
            <!-- /section title -->
            <!-- Products Grid -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-grid d-flex flex-wrap justify-content-around">
                        @foreach (var item in Model)
                        {
                            <!-- product -->
                            <div class="col-md-3 col-xs-6 mb-4">
                                <div class="product card shadow-sm h-100">
                                    <div class="product-img">
                                        <a href="/Customer/Home/Details/@item.ID">
                                            <img src="~/@item.Img" alt="Product Image" class="card-img-top img-fluid" style="max-height: 250px; object-fit: cover;">
                                        </a>
                                    </div>
                                    <div class="product-body p-3 text-center">
                                        <h3 class="product-name"><a href="#">@item.Name</a></h3>
                                        <h4 class="product-price">@item.Price</h4>
                                    </div>
                                    <div class="add-to-cart text-center p-3">
                                        <button class="add-to-cart-btn btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /product -->
                        }
                    </div>
                </div>
            </div>
            <!-- /Products Grid -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
