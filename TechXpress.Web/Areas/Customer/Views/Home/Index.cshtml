@model IPagedList<Product>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
<!-- Start Hero Area -->
<section class="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 custom-padding-right">
                <div class="slider-head">
                    <!-- Start Hero Slider -->
                    <div class="hero-slider">
                        <!-- Start Single Slider -->
                        <div class="single-slider" style="background-image: url('/assets/images/hero/slider-bg1.jpg');">
                            <div class="content">
                                <h2>
                                    <span>No restocking fee ($35 savings)</span>
                                    The M75 Sport Watch
                                </h2>
                                <p>
                                    The M75 Sport Watch is a water-resistant fitness tracker with heart rate monitoring and GPS, offering up to 10 days of battery life and smart notifications.
                                </p>
                                <h3><span>Now Only</span> $320.99</h3>
                                <div class="button">
                                    <a href="#products" class="btn">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Slider -->
                        <!-- Start Single Slider -->
                        <div class="single-slider" style="background-image: url('/assets/images/hero/slider-bg2.jpg');">
                            <div class="content">
                                <h2>
                                    <span>Big Sale Offer</span>
                                    Get the Best Deal on CCTV Camera
                                </h2>
                                <p>
                                    The CCTV Camera provides high-definition video surveillance with night vision and motion detection, ensuring your property stays secure around the clock.
                                </p>
                                <div class="button">
                                    <a href="#products" class="btn">Shop Now</a>
                                </div>
                                <h3><span>Combo Only:</span> $590.00</h3>
                            </div>
                        </div>
                        <!-- End Single Slider -->
                    </div>
                    <!-- End Hero Slider -->
                </div>
            </div>
            <div class="col-lg-4 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-12 md-custom-padding">
                        <div class="hero-small-banner" style="background-image: url('/assets/images/hero/slider-bnr.jpg');">
                            <div class="content">
                                <h2>
                                    <span>New line required</span>
                                    iPhone 12 Pro Max
                                </h2>
                                <h3>$259.99</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-6 col-12">
                        <div class="hero-small-banner style2">
                            <div class="content">
                                <h2>Weekly Sale!</h2>
                                <p>Saving up to 50% off all online store items this week.</p>
                                <div class="button">
                                    <a href="#products" class="btn">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hero Area -->

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="single-product">
                        <div class="product-image">
                            <a asp-action="Details" asp-route-ProductId="@item.ID">
                                <img class="card-img-top" src="~/@item.Img" alt="Product Image" style="max-height: 250px; object-fit: cover;">
                            </a>
                            <div class="button">
                                <a asp-action="Details" asp-route-ProductId="@item.ID" class="btn"><i class="lni lni-cart"></i> Add to Cart</a>
                            </div>
                        </div>
                        <div class="product-info">
                            <h5 class="fw-bolder text-center">@item.Name</h5>
                            <div class="price text-center">
                                <span>$@item.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
    <!-- Pagination Controls -->
    <div class="pagination-container">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, categoryId = ViewBag.CurrentCategoryId }),
                 new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        })
    </div>
</section>


<style>
    .hero-area {
        /* Additional styles for the hero area */
        background-color: #f8f9fa;
    }

    .single-product {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%; /* Ensure the product card takes full height */
        background: #fff; /* Ensure white background for products */
        border-radius: 8px; /* Add rounded corners */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow */
        overflow: hidden; /* Prevent overflow */
        transition: transform 0.3s; /* Animation effect */
    }

        .single-product:hover {
            transform: translateY(-5px); /* Lift effect on hover */
        }

    .product-image {
        position: relative;
        overflow: hidden; /* Prevent overflow from images */
    }

    .product-info {
        padding: 15px; /* Add padding to product info */
    }

    .product {
        min-height: 400px; /* Ensure consistent height for products */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .pagination {
        display: flex;
        justify-content: center;
        padding: 15px 0;
        list-style: none;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                display: block;
                padding: 10px 15px;
                background: #007bff; /* Primary Color */
                color: #ffffff; /* Text Color */
                border-radius: 5px;
                text-decoration: none;
                transition: background 0.3s, color 0.3s, transform 0.2s;
            }

                .pagination li a:hover {
                    background: #0056b3; /* Darker shade for hover */
                    color: #ffffff;
                    transform: scale(1.05); /* Slight scale effect */
                }

            .pagination li.active a {
                background: #0056b3; /* Active page color */
                color: #ffffff; /* Active text color */
                pointer-events: none; /* Disable clicks on the active page */
            }

            .pagination li.disabled a {
                background: #e9ecef; /* Light gray for disabled */
                color: #6c757d; /* Darker gray text */
                pointer-events: none; /* Disable clicks */
            }
</style>
