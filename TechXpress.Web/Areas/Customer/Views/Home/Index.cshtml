<!-- Start Products Section -->
<section id="products" class="trending-product section" style="margin-top: 12px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center mb-5">
                    <h3 class="title">Trending Products</h3>
                    <br />
                    <p>
                        We specialize in providing a wide range of high-quality laptops and mobile devices to suit every need.
                        Explore our curated selection and discover the perfect technology to enhance your lifestyle.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="products-grid d-flex flex-wrap justify-content-between" id="productContainer">
                    @foreach (var item in Model) // Assuming Model contains products
                    {
                        <div class="single-product col-lg-3 col-md-4 col-sm-6 mb-4 product">
                            <div class="product-image">
                                <a href="/Customer/Home/Details/@item.ID">
                                    <img src="~/@item.Img" alt="Product Image" style="max-height: 250px; object-fit: cover;">
                                </a>
                                <div class="button">
                                    <a href="product-details.html" class="btn"><i class="lni lni-cart"></i> Add to Cart</a>
                                </div>
                            </div>
                            <div class="product-info">
                                <h4 class="title">
                                    <a href="product-grids.html">@item.Name</a>
                                </h4>
                                <div class="price">
                                    <span>@item.Price</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination" id="paginationControls"></ul>
    </nav>
</section>
<!-- End Products Section -->

<style>
    .product {
        min-height: 400px; /* Ensure consistent height for products */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .products-grid {
        display: flex; /* Ensure horizontal alignment */
        flex-wrap: wrap; /* Allow wrapping of items */
        justify-content: space-between; /* Space between items */
    }

    /* Pagination Styles */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 15px 0;
        list-style: none;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                display: block;
                padding: 10px 15px;
                background: #007bff; /* Primary Color */
                color: #ffffff; /* Text Color */
                border-radius: 5px;
                text-decoration: none;
                transition: background 0.3s, color 0.3s, transform 0.2s;
            }

                .pagination li a:hover {
                    background: #0056b3; /* Darker shade for hover */
                    color: #ffffff;
                    transform: scale(1.05); /* Slight scale effect */
                }

            .pagination li.active a {
                background: #0056b3; /* Active page color */
                color: #ffffff; /* Active text color */
                pointer-events: none; /* Disable clicks on the active page */
            }

            .pagination li.disabled a {
                background: #e9ecef; /* Light gray for disabled */
                color: #6c757d; /* Darker gray text */
                pointer-events: none; /* Disable clicks */
            }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        const itemsPerPage = 8; // Set the number of items per page
        const items = $('.product'); // Get all product items
        const totalPages = Math.ceil(items.length / itemsPerPage);
        const paginationControls = $('#paginationControls');

        function showPage(page) {
            items.hide(); // Hide all items
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            items.slice(start, end).show(); // Show the current page items
        }

        function setupPagination() {
            for (let i = 1; i <= totalPages; i++) {
                const pageLink = $('<li class="page-item"><a class="page-link" href="#">' + i + '</a></li>');
                pageLink.on('click', function (e) {
                    e.preventDefault(); // Prevent the default anchor behavior
                    showPage(i); // Show the corresponding page
                });
                paginationControls.append(pageLink); // Append to pagination controls
            }
        }

        setupPagination();
        showPage(1); // Show the first page initially
    });
</script>
