    .products-grid {
        display: flex; /* Ensure horizontal alignment */
        flex-wrap: wrap; /* Allow wrapping of items */
        justify-content: space-between; /* Space between items */
    }

    .single-product {
        flex: 1 0 21%; /* Flex grow, shrink and basis - adjust basis for responsiveness */
        margin: 0 10px 20px; /* Add some spacing */
    }
</style>
