@model ShoppingCart
<!-- Start Item Details -->
<section class="item-details section">
    <style>
        /* Zoom effect for product image */
        .zoom-image {
            transition: transform 0.3s ease; /* Smooth transition for zoom effect */
        }

            .zoom-image:hover {
                transform: scale(1.1); /* Scale image on hover */
            }

        /* Align the Add to Cart button with the Quantity input */
        .add-to-cart {
            display: flex;
            align-items: center; /* Aligns items in the center */
            gap: 10px; /* Adds space between quantity input and button */
        }

        .qty-label {
            display: flex;
            align-items: center; /* Center the quantity label and input */
        }

            .qty-label div {
                display: flex; /* Ensures the input is aligned properly */
                align-items: center; /* Center the input */
            }

            .qty-label input {
                max-width: 70px; /* Adjust width for better fit */
            }
    </style>

    <div class="container">
        <div class="top-area">
            <div class="row align-items-center">
                <!-- Product Images -->
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-images">
                        <main id="gallery">
                            <div class="main-img">
                                <img src="~/@Model.Product.Img" alt="Product Image" id="current" class="img-fluid zoom-image" />
                            </div>
                        </main>
                    </div>
                </div>
                <!-- Product Info -->
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-info">
                        <h2 class="title">@Model.Product.Name</h2>
                        <p class="category">
                            <i class="lni lni-tag"></i> @Model.Product.Category.Name
                        </p>
                        <h3 class="price">@Model.Product.Price.ToString("C")</h3>
                        <p class="info-text">@Model.Product.Description</p>

                        <div class="add-to-cart">
                            <div class="qty-label">
                                                              
                                <div>
                                    <input class="form-control text-center me-2" id="inputQuantity" asp-for="Count" />
                                </div>
                            </div>
                            <button class="btn btn-outline-dark" type="submit">
                                <i class="bi-cart-fill me-1"></i> Add to cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Item Details -->
