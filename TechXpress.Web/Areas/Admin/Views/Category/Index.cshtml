@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories List";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
<div class="mb-3 d-flex justify-content-end">
    <a class="btn btn-primary" href="/Admin/Category/Create">
        <i class="fas fa-plus"></i> Create Category
    </a>
</div>

<table class="table table-hover" width="100%">
    <thead class="text-bold">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created On</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@Html.Raw(item.Description)</td>
            <td>@item.CreatedOn</td>
            <td>
                <a class="btn btn-success" href="/Admin/Category/Edit/@item.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" href="/Admin/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
