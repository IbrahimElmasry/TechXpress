@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Edit Category";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4>@ViewBag.CardTitle</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input hidden asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Category
                </button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-warning">
                    <i class="fas fa-arrow-left"></i> Back to Index
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
          selector: '#mytextarea',
          license_key: 'gpl|<your-license-key>'
        });
    </script>
}
