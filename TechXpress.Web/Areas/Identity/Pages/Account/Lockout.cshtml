@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked Out";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa; /* Light background color */
        }
        .lockout-container {
            max-width: 500px; /* Set a max width for better readability */
            margin: 100px auto; /* Center the content */
            padding: 20px;
            background-color: #ffffff; /* White background for the card */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }
        .lockout-title {
            color: #dc3545; /* Bootstrap danger color */
            margin-bottom: 20px; /* Space below title */
        }
        .lockout-message {
            color: #6c757d; /* Bootstrap muted color */
            font-size: 1.1em; /* Slightly larger font size */
        }
    </style>
</head>
<body>
    <div class="lockout-container text-center">
        <h1 class="lockout-title">@ViewData["Title"]</h1>
        <p class="lockout-message">This account has been locked out. Please try again later.</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
