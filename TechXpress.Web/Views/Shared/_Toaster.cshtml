@if (TempData["Create"] != null)
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,                 // Add close button
            "progressBar": true,                 // Add progress bar
            "positionClass": "toast-top-right",  // Ensure position is top-right
            "timeOut": "5000",                   // How long the notification is displayed
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",              // Animation style (fadeIn, slideDown, etc.)
            "hideMethod": "fadeOut"
        };
        toastr["success"]("@Html.Raw(TempData["Create"])", "Admin Dash Board Notification Center");
    </script>
}

