@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories List";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<div class="mb-3 d-flex justify-content-end">
    <a class="btn btn-primary" href="/Category/Create">
        <i class="fas fa-plus"></i> Create Category
    </a>
</div>

<table class="table table-hover" width="100%">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created On</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedOn</td>
            <td>
                <a class="btn btn-success" href="/Category/Edit/@item.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
